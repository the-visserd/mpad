<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
    <style>
        .question {
            margin-bottom: 20px;
        }
        .question p {
            margin-bottom: 5px;
        }
        .question label {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>{{ title }}</h1>
        <p>{{ instructions }}</p>
        <form method="post">
            {% for question in questions %}
            <div class="question">
                <p><strong>{{ question.id }}:</strong> {{ question.text }}</p>
                <br>
                <div>Nie
                    {% for i in range(6) %}
                    <input type="radio" id="q{{ question.id }}_option{{ i }}" name="q{{ question.id }}" value="{{ i }}" required>
                    <label for="q{{ question.id }}_option{{ i }}">{{ i }}</label>
                    {% endfor %}
                    Immer
                </div>
                <br>
            </div>
            {% endfor %}
            <button type="submit">Abschicken</button>
        </form>
    </div>
</body>
</html>
